# 이 파일을 복사해서 .env 파일 만들고 실제 값 입력
# cp .env.example .env

# ── DB ─────────────────────────────────
DB_USERNAME=anniversary_user
DB_PASSWORD=YOUR_DB_PASSWORD

# ── AWS ────────────────────────────────
AWS_ACCESS_KEY=YOUR_AWS_ACCESS_KEY
AWS_SECRET_KEY=YOUR_AWS_SECRET_KEY
AWS_S3_BUCKET=anniversary-video-bucket
AWS_REGION=ap-northeast-2

# ── 포트원 V2 ──────────────────────────
PORTONE_STORE_ID=your-store-id
PORTONE_CHANNEL_KEY=your-channel-key
PORTONE_API_SECRET=your-api-secret

# ── RunwayML ───────────────────────────
RUNWAYML_API_KEY=YOUR_RUNWAY_KEY

# ── 솔라피 (SMS, 선택) ────────────────
SOLAPI_API_KEY=YOUR_SOLAPI_KEY
SOLAPI_API_SECRET=YOUR_SOLAPI_SECRET
SOLAPI_SENDER=01000000000

# ── 관리자 ─────────────────────────────
ADMIN_USERNAME=admin
ADMIN_PASSWORD=YOUR_SECURE_PASSWORD

# ── 앱 ─────────────────────────────────
APP_BASE_URL=https://your-domain.com
CLOUDFRONT_DOMAIN=https://YOUR_DOMAIN.cloudfront.net

# ── Slack (선택) ───────────────────────
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
